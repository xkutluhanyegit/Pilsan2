@model List<Entities.DTO.PersonelDetailSectionByDep>
<div class="card">
    <div class="card-header">
        <h3 style="font-weight: bold;" class="card-title float-left">Akülü Montaj Bölümü Personel Listesi </h3>
        <a asp-controller="batteryinstallation" asp-action="vardiya" class="btn btn-success float-right"><i
                class="fa-regular fa-file-lines"></i> Vardiya Oluştur</a>

        <a asp-controller="section" asp-action="battery_installation_shift_plus"
            class="btn btn-warning float-right mr-2"><i class="fa-regular fa-file-lines"></i> Fazla Mesai Oluştur</a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="section-table" class="table table-bordered table-striped table-sm">
            <thead>
                <tr>
                    <th style="max-width: 30px;">#</th>
                    <th>Personel Ad Soyad</th>
                    <th>Departman</th>
                    <th>Vardiya</th>
                    <th>İmza</th>
                </tr>
            </thead>
            <tbody>

                @{
                    int count = 1;
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="max-width: 30px;">@count</td>
                            <td>@item.Ad @item.Soyad</td>
                            <td>@item.Departman</td>
                            <td>@item.Vardiya</td>
                            <td></td>
                        </tr>
                        count++;
                    }
                }

            </tbody>
            <tfoot>
                <tr>
                    <th style="max-width: 30px;">#</th>
                    <th>Personel Ad Soyad</th>
                    <th>Departman</th>
                    <th>Vardiya</th>
                    <th>İmza</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>